<section id="pages">
    <div class="container">
        <div class="pages__content">
            <div class="nav">
                <hr class="nav__line-break">
                <nav>
                    <div class="nav__link">dinner</div>
                    <div class="nav__link">cocktails & wine</div>
                    <div class="nav__link">children's</div>
                </nav>
                <hr class="nav__line-break">
            </div>
            <h1 class="menu-page__title">dinner menu</h1>
            <div class="row">
                <div class="col-md-12">
                    <div class="menu">
                        <h1 class="menu__title"><%= @variable[0][0] %></h1>
                        <hr class="menu__line-break">
                        <div class="menu__description"><%= @variable[0][1] %></div>
                        <div class="menu__items">
                            <% @menu.each do |item| %>
                                <% if item.menu_category_id == 1 %>
                                    <div class="menu__item">
                                        <div class="menu__item-title"><%= item.item %></div>
                                        <div class="menu__item-description"><%= item.item_description %></div>
                                    </div>
                                <% end %>
                            <% end %>
                        </div>
                    </div> 

                    <div class="menu">
                        <h1 class="menu__title"><%= @variable[4][0] %></h1>
                        <hr class="menu__line-break">
                        <div class="menu__description"><%= @variable[4][1] %></div>
                        <div class="menu__items">
                            <% @menu.each do |item| %>
                                <% if item.menu_category_id == 2 %>
                                    <div class="menu__item">
                                        <div class="menu__item-title"><%= item.item %></div>
                                        <div class="menu__item-description"><%= item.item_description %></div>
                                    </div>
                                <% end %>
                            <% end %>
                        </div>
                    </div> 
                </div>
            </div>
            <section class="menu-modal">
                <div class="menu-modal__container">
                     <div class="menu-modal__close-btn">
                        <i class="ti-close"></i>
                    </div>
                    <div class="menu-modal__top-image">
                        <%= image_tag "calamari" %>
                    </div>
                    <div class="menu-modal__info">
                        <h1 class="menu-modal__title">calamari</h1>
                        <p class="menu-modal__description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ad recusandae, alias dignissimos laboriosam dolor ratione enim provident id veniam nesciunt, nemo voluptates in quibusdam.</p>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>